<head>
    <script>
        var gridFriendly = [
            [["clicked", ""], ["clicked", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""]],
            [["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""]],
            [["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""]],
            [["clicked", ""], ["clicked", ""], ["clicked", ""], ["clicked", ""], ["clicked", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""]],
            [["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""]],
            [["empty", ""], ["empty", ""], ["empty", ""], ["empty", ""], ["clicked", ""], ["clicked", ""], ["clicked", ""], ["clicked", ""], ["empty", ""], ["empty", ""]],
