@model Submarine.Web.Models.LobbyModel
@{
    ViewData["Title"] = "JoinLobby";
}

@using (Html.BeginForm("JoinLobby", "Lobby", FormMethod.Post))
{
    <h1>Login</h1>
    <div class="DivCenterButtons" , style="margin-top: 265px">
        <h2>Enter lobby code</h2>
        <div style="margin-top: 20px">
            @Html.EditorFor(model => model.lobbyCode, new { htmlAttributes = new { @class = "text" } })
        </div>
        <div style="margin-top: 20px">
            @Html.ValidationMessageFor(model => model.lobbyCode, "", new { @class = "text-danger" })
        </div>
        <div style="margin-top: 20px">
            <button type="submit" , class="btn btn-startbuttons">Next</button>
        </div>
    </div>
}